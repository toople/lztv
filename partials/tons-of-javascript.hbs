      <script type="text/javascript">
         jQuery(document).ready(function($) {
         $(window).load(function(){
         var leaderHeight = $("#lztv-leader-wrap").outerHeight();
         var logoHeight = $("#lztv-main-nav-top").outerHeight();
         var botHeight = $("#lztv-main-nav-bot").outerHeight();
         var navHeight = $("#lztv-main-head-wrap").outerHeight();
         var headerHeight = navHeight + leaderHeight;
         var aboveNav = leaderHeight + logoHeight;
         var totalHeight = logoHeight + botHeight;
         var previousScroll = 0;
         $(window).scroll(function(event){
         		var scroll = $(this).scrollTop();
         		if ($(window).scrollTop() > aboveNav){
         			$("#lztv-main-nav-top").addClass("lztv-nav-small");
         			$("#lztv-main-nav-bot").css("margin-top", logoHeight );
         		} else {
         			$("#lztv-main-nav-top").removeClass("lztv-nav-small");
         			$("#lztv-main-nav-bot").css("margin-top","0");
         		}
         		if ($(window).scrollTop() > headerHeight){
         			$("#lztv-main-nav-top").addClass("lztv-fixed");
         			$("#lztv-main-nav-bot").addClass("lztv-fixed1");
         			$("#lztv-main-body-wrap").css("margin-top", totalHeight );
         			$("#lztv-main-nav-top").addClass("lztv-fixed-shadow");
         			$(".lztv-nav-top-mid").addClass("lztv-fixed-post");
         			$(".lztv-drop-nav-title").show();
         			$(".lztv-fly-top").addClass("lztv-to-top");
             		if(scroll < previousScroll) {
         				$("#lztv-main-nav-bot").addClass("lztv-fixed2");
         				$("#lztv-main-nav-top").removeClass("lztv-fixed-shadow");
         				$("#lztv-main-nav-top").removeClass("lztv-soc-mob-up");
         				$("#lztv-soc-mob-wrap").removeClass("lztv-soc-mob-up");
         			} else {
         				$("#lztv-main-nav-bot").removeClass("lztv-fixed2");
         				$("#lztv-main-nav-top").addClass("lztv-fixed-shadow");
         				$("#lztv-main-nav-top").addClass("lztv-soc-mob-up");
         				$("#lztv-soc-mob-wrap").addClass("lztv-soc-mob-up");
         			}
         		} else {
         			$("#lztv-main-nav-top").removeClass("lztv-fixed");
         			$("#lztv-main-nav-bot").removeClass("lztv-fixed1");
         			$("#lztv-main-nav-bot").removeClass("lztv-fixed2");
         			$("#lztv-main-body-wrap").css("margin-top","0");
         			$("#lztv-main-nav-top").removeClass("lztv-fixed-shadow");
         			$(".lztv-nav-top-mid").removeClass("lztv-fixed-post");
         			$(".lztv-drop-nav-title").hide();
             		$(".lztv-fly-top").removeClass("lztv-to-top");
         		}
         		previousScroll = scroll;
         });
         });
         });
         
         
         jQuery(document).ready(function($) {
         // Video Post Scroll
         $(window).on("scroll.video", function(event){
         	var scrollTop     = $(window).scrollTop();
            	var elementOffset = $("#lztv-content-wrap").offset().top;
            	var distance      = (elementOffset - scrollTop);
         	var aboveHeight = $("#lztv-video-embed-wrap").outerHeight();
         	if ($(window).scrollTop() > distance + aboveHeight + screen.height){
         		$("#lztv-video-embed-cont").addClass("lztv-vid-fixed");
         		$("#lztv-video-embed-wrap").addClass("lztv-vid-height");
         		$(".lztv-video-close").show();
         	} else {
         		$("#lztv-video-embed-cont").removeClass("lztv-vid-fixed");
         		$("#lztv-video-embed-wrap").removeClass("lztv-vid-height");
         		$(".lztv-video-close").hide();
         	}
         });
         
         	$(".lztv-video-close").on("click", function(){
         	$("iframe").attr("src", $("iframe").attr("src"));
         	$("#lztv-video-embed-cont").removeClass("lztv-vid-fixed");
         	$("#lztv-video-embed-wrap").removeClass("lztv-vid-height");
         	$(".lztv-video-close").hide();
         	$(window).off("scroll.video");
          	});
         
         });
          	
         
         jQuery(document).ready(function($) {
         // Mobile Social Buttons More
         $(window).load(function(){
         		$(".lztv-soc-mob-right").on("click", function(){
         		$("#lztv-soc-mob-wrap").toggleClass("lztv-soc-mob-more");
          		});
          	});
         });
          	
         
         jQuery(document).ready(function($) {
         // Continue Reading Button
         $(window).load(function(){
         		$(".lztv-cont-read-but").on("click", function(){
         		$("#lztv-content-body-top").css("max-height","none");
         		$("#lztv-content-body-top").css("overflow","visible");
         		$(".lztv-cont-read-but-wrap").hide();
          		});
          	});
         });
          	
         
         jQuery(document).ready(function($) {
         $(window).load(function(){
         	var leaderHeight = $("#lztv-leader-wrap").outerHeight();
         	$("#lztv-site-main").css("margin-top", leaderHeight );
          	});
         
         $(window).resize(function(){
         	var leaderHeight = $("#lztv-leader-wrap").outerHeight();
