         });
         
         });
          	
         
         jQuery(document).ready(function($) {
         $(".menu-item-has-children a").click(function(event){
           event.stopPropagation();
           location.href = this.href;
          	});
         
         $(".menu-item-has-children").click(function(){
            	  $(this).addClass("toggled");
            	  if($(".menu-item-has-children").hasClass("toggled"))
            	  {
            	  $(this).children("ul").toggle();
           $(".lztv-fly-nav-menu").getNiceScroll().resize();
           }
           $(this).toggleClass("tog-minus");
            	  return false;
          	});
         
         // Main Menu Scroll
         $(window).load(function(){
           $(".lztv-fly-nav-menu").niceScroll({cursorcolor:"#888",cursorwidth: 7,cursorborder: 0,zindex:999999});
         });
         });
         
         
         jQuery(document).ready(function($) {
         $(".infinite-content").infinitescroll({
           navSelector: ".lztv-nav-links",
           nextSelector: ".lztv-nav-links a:first",
           itemSelector: ".infinite-post",
           errorCallback: function(){ $(".lztv-inf-more-but").css("display", "none") }
         });
         $(window).unbind(".infscr");
         $(".lztv-inf-more-but").click(function(){
           		$(".infinite-content").infinitescroll("retrieve");
                	return false;
         });
         $(window).load(function(){
         	if ($(".lztv-nav-links a").length) {
         		$(".lztv-inf-more-but").css("display","inline-block");
         	} else {
         		$(".lztv-inf-more-but").css("display","none");
         	}
         });
         });
         
      </script> 
