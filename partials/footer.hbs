					<ul class="menu">
		{{#foreach navigation}}
		<li class="menu-item {{slug}}{{#if current}} current-menu-item{{/if}}" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></li>
		{{/foreach}}
	</ul>
				
				</p>
            </div>
            <!--lztv-foot-copy--> 
          </div>
          <!--lztv-main-box--> 
        </div>
